<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:background="#593EFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_margin="30px"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ScrollView
                android:layout_marginHorizontal="20px"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Header"
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_marginHorizontal="30px"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="serif"
                        android:text="Новый Тайтл"
                        android:textColor="@color/black"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/Content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30px"
                        android:fontFamily="serif"
                        android:textColor="@color/black"
                        android:text="Content">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/black"></View>

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="200px"
                        android:fontFamily="sans-serif-light"
                        android:gravity="top"
                        android:text="Авторы: Юля Балаева, Иван Лыкин, Кузькин Евгений и их друг 🤖"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>

                </LinearLayout>

            </ScrollView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>